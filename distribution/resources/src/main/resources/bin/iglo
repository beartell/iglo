#
# Environment Variables
#
#   IGLO_CONF_DIR   Alternate Dremio conf dir. Default is ${IGLO_HOME}/conf.
#   IGLO_LOG_DIR    Where log files are stored.  PWD by default.
#   IGLO_PLUGINS_DIR Where plugins are stored. Default is ${IGLO_HOME}/plugins.
#   IGLO_PID_DIR    The pid files are stored. /tmp by default.
#   IGLO_NICENESS The scheduling priority for daemons. Defaults to 0.
#   IGLO_STOP_TIMEOUT  Time, in seconds, after which we kill -9 the server if it has not stopped.
#                        Default 120 seconds.
#

usage="Usage: iglo [--config <conf-dir>]\
 (start|start-fg||stop|status|restart|autorestart)"

# if no args specified, show usage
if [ $# -lt 1 ]; then
  echo $usage
  exit 1
fi

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin">/dev/null; pwd`

if [ -z "$IGLO_IN_CONTAINER" -a $$ == 1 ]; then
 IGLO_IN_CONTAINER=1
fi
if [ -z "$IGLO_LOG_TO_CONSOLE" -a "$IGLO_IN_CONTAINER" == "1" ]; then
 IGLO_LOG_TO_CONSOLE=1
fi
export IGLO_IN_CONTAINER
export IGLO_LOG_TO_CONSOLE
export IGLO_ENV_SCRIPT="iglo-env"
. "$bin"/iglo-config

# get arguments
startStopStatus=$1
shift

command=iglo

print_warn() {
  echo "#######################################################################"
  echo "WARNING:"
  echo ""
  echo -e "$1"
  echo ""
  echo "#######################################################################"
}

wait_for_process_end() {
  pidKilled=$1
  commandName=$2
  processedAt=`date +%s`
  while kill -0 $pidKilled > /dev/null 2>&1;
   do
     echo -n "."
     sleep 1;
     # if process persists more than $IGLO_STOP_TIMEOUT (default 120 sec) no mercy
     if [ $(( `date +%s` - $processedAt )) -gt ${IGLO_STOP_TIMEOUT:-120} ]; then
       break;
     fi
   done
  # process still there : kill -9
  if kill -0 $pidKilled > /dev/null 2>&1; then
    echo -n force stopping $commandName with kill -9 $pidKilled
    $JAVA_HOME/bin/jstack -l $pidKilled > "$logout" 2>&1
    kill -9 $pidKilled > /dev/null 2>&1
  fi
  # Add a CR after we're done w/ dots.
  echo
}

iglo_rotate_log() {
    log=$1;
    num=5;
    if [ -n "$2" ]; then
    num=$2
    fi
    if [ -f "$log" ]; then # rotate logs
    while [ $num -gt 1 ]; do
        prev=`expr $num - 1`
        [ -f "$log.$prev" ] && mv -f "$log.$prev" "$log.$num"
        num=$prev
    done
    mv -f "$log" "$log.$num";
    fi
}

iglo_internal_start() {
    iglo_rotate_log $loggc

    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS ${SERVER_GC_OPTS}"
    [ "$IGLO_LOG_TO_CONSOLE" != "1" ] && IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -Ddremio.log.path=${IGLO_LOG_DIR}"
    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -Ddremio.plugins.path=${IGLO_PLUGINS_DIR}"
    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -Xmx${IGLO_MAX_HEAP_MEMORY_SIZE_MB}m"
    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -XX:MaxDirectMemorySize=${IGLO_MAX_DIRECT_MEMORY_SIZE_MB}m"

    [ -z "$IGLO_DISABLE_HEAPDUMP" ] && \
        IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=${IGLO_LOG_DIR}"

    # netty options
    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -Dio.netty.maxDirectMemory=${IGLO_NETTY_MAX_DIRECT_MEMORY:-0} -Dio.netty.tryReflectionSetAccessible=true"
    # MapRFS specific options
    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -DMAPR_IMPALA_RA_THROTTLE -DMAPR_MAX_RA_STREAMS=${MAPR_MAX_RA_STREAMS:-400}"
    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS $IGLO_GC_OPTS"
    # User options
    IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS $IGLO_JAVA_SERVER_EXTRA_OPTS $IGLO_JAVA_EXTRA_OPTS "
    # Add this option only if it is Java 8
    if [ "$JAVA_MAJOR_VERSION" -eq 8 ]; then
      IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -XX:+PrintClassHistogramBeforeFullGC"
      IGLO_JAVA_OPTS="$IGLO_JAVA_OPTS -XX:+PrintClassHistogramAfterFullGC"
    fi
    # Add to the command log file vital stats on our environment.
    echo "`date` Starting $command on `hostname`" >> $logout
    echo "`ulimit -a`" >> $logout 2>&1
    # save pid file only when not running as PID 1 - happens in containers
    if [ "$IGLO_IN_CONTAINER" != "1" ]; then
        mkdir -p "$IGLO_PID_DIR" && echo $$ > "$pid"
        if [ $? != 0 ]; then
          echo "$IGLO_PID_DIR not found or $USER does not have access to it."
          echo "Please create $IGLO_PID_DIR and/or give the user $USER ownership to the directory."
          exit 1
        fi
    fi

    IGLO_DAEMON_MAIN_CLASS=${IGLO_DAEMON_MAIN_CLASS:-"com.dremio.dac.daemon.DremioDaemon"}
    exec $JAVA $IGLO_JAVA_OPTS -cp "$IGLO_CLASSPATH" $IGLO_DAEMON_MAIN_CLASS $IGLO_DAC_DAEMON_EXTRA_OPTIONS
}

check_before_start() {
    #check the ulimit -n
    ULIMIT=65536
    if [ "$(ulimit -n)" -lt "$ULIMIT" ]; then
      print_warn "\
Please increase the maximum number of file descriptors to at least $ULIMIT.\n\n\
Dremio utilizes a large number of file descriptors.\n\
The maximum number of file descriptors, currently set at $(ulimit -n), is not sufficient."
    fi
    #ckeck if the process is not running
    if [ -f "$pid" ]; then
      if kill -0 `cat "$pid"` > /dev/null 2>&1; then
        echo $command running as process `cat "$pid"`.  Stop it first.
        exit 1
      fi
    fi
}

wait_until_done() {
    p=$1
    cnt=${IGLO_TIMEOUT:-300}
    origcnt=$cnt
    while kill -0 $p > /dev/null 2>&1; do
      if [ $cnt -gt 1 ]; then
        cnt=`expr $cnt - 1`
        sleep 1
      else
        echo "Process did not complete after $origcnt seconds, killing."
        kill -9 $p
        exit 1
      fi
    done
    return 0
}

IGLO_PID_DIR="${IGLO_PID_DIR:-${IGLO_HOME}/run}"

# Some variables
# Work out java location so can print version into log.
if [ "$JAVA_HOME" != "" ]; then
  #echo "run java in $JAVA_HOME"
  JAVA_HOME=$JAVA_HOME
fi
if [ "$JAVA_HOME" = "" ]; then
  echo "Error: JAVA_HOME is not set."
  exit 1
fi

IGLO_GC_LOG_FILENAME=${IGLO_GC_LOG_FILENAME:-"server.gc"}

# The JVM GC logs
loggc="${IGLO_LOG_DIR}/${IGLO_GC_LOG_FILENAME}"
# stdout messages
logout="${IGLO_LOG_DIR}/server.out"
pid="$IGLO_PID_DIR/iglo.pid"

# To log to console only, set LOG_TO_CONSOLE=1
export LOG_TO_CONSOLE=0

IGLO_GC_LOGS_ENABLED=${IGLO_GC_LOGS_ENABLED:-"yes"}
IGLO_GC_LOG_TO_CONSOLE=${IGLO_GC_LOG_TO_CONSOLE:-"no"}
if [ "$IGLO_GC_LOGS_ENABLED" != "no" ]; then
  if [ "$IGLO_GC_LOG_TO_CONSOLE" != "no" ]; then
    if [ "$JAVA_MAJOR_VERSION" -le 8 ]; then
      SERVER_GC_OPTS="-XX:+PrintGCDetails -XX:+PrintGCDateStamps"
    else
      SERVER_GC_OPTS="-Xlog:gc*::time,uptime,tags,level"
    fi
  else
    if [ "$JAVA_MAJOR_VERSION" -le 8 ]; then
      SERVER_GC_OPTS="-XX:+PrintGCDetails -XX:+PrintGCDateStamps -Xloggc:${loggc}"
    else
      SERVER_GC_OPTS="-Xlog:gc*:file=${loggc}:time,uptime,tags,level"
    fi
  fi
fi
# Set default scheduling priority
IGLO_NICENESS="${IGLO_NICENESS:-0}"

thiscmd=$0

args=$@
# args may be empty as they could be striped out. Reading them.
args=$([ "${IGLO_ADMIN_ONLY}" == "true" ] && echo "--admin-only")

mkdir -p "${IGLO_LOG_DIR}"

case $startStopStatus in

(start)
    check_before_start
    echo Starting $command, logging to $logout
    nohup $thiscmd $args internal_start < /dev/null >> ${logout} 2>&1  &
    sleep 1;
    echo Check the log file to make sure $command started successfully and did not run into any issues.
  ;;

(start-fg)
    check_before_start
    echo starting $command
    iglo_internal_start $args
  ;;

(internal_start)
    iglo_internal_start $args
  ;;

(stop)
    rm -f "$IGLO_START_FILE"
    if [ -f "$pid" ]; then
      pidToKill=`cat "$pid"`
      # kill -0 == see if the PID exists
      if kill -0 $pidToKill > /dev/null 2>&1; then
        echo stopping $command
        echo "`date` Terminating $command pid $pidToKill">> $logout
        kill $pidToKill > /dev/null 2>&1
        wait_for_process_end $pidToKill $command
        rm "$pid"
      else
        retval=$?
        echo no $command to stop because kill -0 of pid $pidToKill failed with status $retval
      fi
    else
      echo no $command to stop because no pid file "$pid"
    fi
  ;;

(restart)
    # stop the command
    $thiscmd --config "${IGLO_CONF_DIR}" stop $command $args &
    wait_until_done $!
    # wait a user-specified sleep period
    sp=${IGLO_RESTART_SLEEP:-3}
    if [ $sp -gt 0 ]; then
      sleep $sp
    fi
    # start the command
    $thiscmd --config "${IGLO_CONF_DIR}" start $command $args &
    wait_until_done $!
  ;;

(status)
    if [ -f "$pid" ]; then
      TARGET_PID=`cat "$pid"`
      if kill -0 $TARGET_PID > /dev/null 2>&1; then
        echo $command is running.
        exit 0
      else
        echo "$pid file is present but $command not running."
        exit 1
      fi
    else
      echo $command not running.
      exit 2
    fi
    ;;

(*)
  echo $usage
  exit 1
  ;;
esac

INSTALL_DIR=/opt/mapr
DAEMON_CONF="${INSTALL_DIR}/conf/daemon.conf"
IGLO_HOME=/opt/iglo

if [ -e $DAEMON_CONF ]; then
    MAPR_USER=$( awk -F = '$1 == "mapr.daemon.user" { print $2 }' $DAEMON_CONF)
    MAPR_GROUP=$( awk -F = '$1 == "mapr.daemon.group" { print $2 }' $DAEMON_CONF)
    chown -R $MAPR_USER:$MAPR_GROUP /var/log/iglo
    chown -R $MAPR_USER:$MAPR_GROUP /var/run/iglo
    chown -R $MAPR_USER:$MAPR_GROUP /var/lib/iglo

    # change IGLO_USER to MAPR_USER in sysconfig/iglo
    sed -i -e 's/^.*IGLO_USER=.*/IGLO_USER='$MAPR_USER'/g' /etc/sysconfig/iglo

    # change User to MAPR_USER in /etc/systemd/system/iglo.service.d/01-mapr-user.conf
    # reload systemctl daemon if needed
    mkdir -p /etc/systemd/system/iglo.service.d
    cat << EOT > /etc/systemd/system/iglo.service.d/01-mapr-user.conf
[Service]
User=$MAPR_USER
Group=$MAPR_GROUP
EOT
    if command -v systemctl >/dev/null; then
      systemctl daemon-reload
    fi

    # change IGLO_USER IGLO_GROUP to MAPR_USER MAPR_GROUP in optional /usr/lib/tmpfiles.d/iglo.conf
    [ -f '/usr/lib/tmpfiles.d/iglo.conf' ] && sed -i -e "s/ iglo iglo/ $MAPR_USER $MAPR_GROUP/g" /usr/lib/tmpfiles.d/iglo.conf

fi

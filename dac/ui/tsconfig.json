{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@inject/*": ["./src/*", "./src/stubModule.js"],
      "dyn-load/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020"
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS"
    }
  }
}
